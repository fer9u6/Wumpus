<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <fragment
        android:id="@+id/beyondarFragment"
        android:name="com.beyondar.android.fragment.BeyondarFragmentSupport"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/viewMurcielago"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/murcielago"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/common_google_signin_btn_text_light_disabled"
        android:backgroundTint="@android:color/darker_gray"
        android:orientation="horizontal"
        android:visibility="visible">

        <ImageView
            android:id="@+id/imagenCueva"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="false"
            android:background="@mipmap/cueva8bit"
            android:visibility="visible"
            app:srcCompat="@mipmap/cueva8bit" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Cueva actual:"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imagenFlechas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/flechas"
            app:srcCompat="@drawable/flechas" />

    </LinearLayout>

</FrameLayout>