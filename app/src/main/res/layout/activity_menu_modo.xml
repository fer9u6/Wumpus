<?xml version="1.0" encoding="utf-8"?>
<android.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="isl.wumpus.MenuModo"
    android:orientation="vertical"
    android:columnCount="1"
    android:rowCount="5"
    android:layout_gravity="center"
    android:background="@drawable/fondomenu"
    >

    <TextView
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnSolo"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:inputType="textPersonName"
        android:text="Escoge Modalidad"
        android:textColor="#fffff2"
        android:textSize="40dp" />

    <Button
        android:id="@+id/btnSolo"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnMulti"
        android:layout_alignLeft="@+id/btnMulti"
        android:layout_alignStart="@+id/btnMulti"
        android:layout_marginBottom="36dp"
        android:onClick="showmsg"
        android:layout_gravity="center_horizontal"
        android:text="INICIAR EL JUEGO" />


    <Button
        android:id="@+id/btnMulti"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:onClick="showmsg"
        android:text="Compartir Laberinto"
        android:layout_centerVertical="true"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/editText2"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="El Wumpus te esta esperando"
        android:textColor="#fffff2"
        android:layout_gravity="center_horizontal"
        android:textSize="20dp"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/btnMulti"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/creditos"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="creditos"
        android:onClick="creditopen"
        />


</android.widget.GridLayout>