<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="isl.wumpus.EscogerLaberinto">

    <Button
        android:id="@+id/btnRegular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Regular"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="5dp"
        android:layout_marginTop="30dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/btnIrregular"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="5dp" />

    <Button
        android:id="@+id/btnIrregular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Irregular"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/ivPoliedro"
        android:layout_marginStart="33dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="32dp"
        app:layout_constraintLeft_toLeftOf="@+id/ivPoliedro"
        android:layout_marginLeft="33dp" />

    <ImageView
        android:id="@+id/ivPoliedro"
        android:layout_width="165dp"
        android:layout_height="143dp"
        app:srcCompat="@android:drawable/ic_menu_report_image"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/btnDibujar"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="65dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/btnDibujar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dibujar"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="44dp"
        app:layout_constraintBottom_toBottomOf="@+id/btnEmplazar"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnEmplazar"
        android:layout_marginLeft="44dp" />

    <Button
        android:id="@+id/btnEmplazar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Emplazar"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="46dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="59dp"
        android:layout_marginRight="46dp" />
</android.support.constraint.ConstraintLayout>
